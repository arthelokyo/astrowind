---
import Layout from '~/layouts/PageLayout.astro';
import SinglePost from '~/components/blog/SinglePost.astro';

const metadata = {
  title: 'Sample Project 2',
  description: 'This is a sample project article for Project 2',
  pubDate: new Date('2025-04-29'),
};

const post = {
  id: 'sample-project-2',
  slug: 'sample-project-2',
  permalink: '/projects/sample-project-2',
  title: metadata.title,
  description: metadata.description,
  publishDate: metadata.pubDate,
  image: 'https://images.unsplash.com/photo-1516116216624-53e697fedbea?q=80&w=2728&auto=format&fit=crop',
};
---

<Layout metadata={metadata}>
  <SinglePost post={post} url={post.permalink}>
    <h1 class="text-4xl font-bold mb-8">Sample Project 2</h1>

    <div class="prose dark:prose-invert max-w-none">
      <p>This is a detailed description of Sample Project 2. You can add more content here including:</p>

      <ul>
        <li>Project objectives</li>
        <li>Technologies used</li>
        <li>Key features</li>
        <li>Challenges and solutions</li>
        <li>Results and impact</li>
      </ul>

      <h2>Project Details</h2>
      <p>Add more sections and content about your project here.</p>
    </div>
  </SinglePost>
</Layout>
