---
import { Icon } from 'astro-icon/components';

interface Props {
  title?: string;
  subtitle?: string;
}

const { title = "Technologies I Use", subtitle = "Some of the technologies I've worked with:" } = Astro.props;

const technologies = [
  { name: 'Python', icon: 'skill-icons:python-dark' },
  { name: 'GitHub', icon: 'skill-icons:github-dark' },
  { name: 'VS Code', icon: 'skill-icons:vscode-dark' },
  { name: 'Terminal', icon: 'skill-icons:bash-dark' },
  { name: 'Bash', icon: 'skill-icons:bash-dark' },
  { name: 'AWS', icon: 'skill-icons:aws-dark' },
  { name: 'Linux', icon: 'skill-icons:linux-dark' },
  { name: 'Cloudflare', icon: 'skill-icons:cloudflare-dark' },
  { name: 'Docker', icon: 'skill-icons:docker' },
  { name: 'Electron', icon: 'skill-icons:electron' },
  { name: 'Notion', icon: 'skill-icons:notion-dark' },
  { name: 'Supabase', icon: 'skill-icons:supabase-dark' },
  { name: 'Tauri', icon: 'skill-icons:tauri-light' },
  { name: 'Vite', icon: 'skill-icons:vite-dark' },
  { name: 'Windows', icon: 'skill-icons:windows-dark' },
  { name: 'Markdown', icon: 'skill-icons:markdown-dark' },
  { name: 'Maven', icon: 'skill-icons:maven-dark' },
  { name: 'Java', icon: 'skill-icons:java-dark' },
  { name: 'MySQL', icon: 'skill-icons:mysql-dark' },
  { name: 'WordPress', icon: 'skill-icons:wordpress' }
];
---

<section class="relative">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="py-12 md:py-20">
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
          {title}
        </h2>
        <p class="text-xl text-gray-600 dark:text-slate-400">
          {subtitle}
        </p>
      </div>
      <div class="flex flex-wrap justify-center gap-4 mt-12">
        {
          technologies.map((tech) => (
            <div class="flex items-center bg-gray-100 dark:bg-gray-800 rounded-full px-4 py-2 transition-transform hover:scale-110">
              <div class="h-6 w-6 mr-2">
                {tech.icon ? (
                  <Icon name={tech.icon} class="w-full h-full" />
                ) : (
                  <div class="w-full h-full bg-gray-200 rounded-full flex items-center justify-center">
                    <span class="text-xs">{tech.name[0]}</span>
                  </div>
                )}
              </div>
              <span class="text-sm text-gray-700 dark:text-gray-300">{tech.name}</span>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
