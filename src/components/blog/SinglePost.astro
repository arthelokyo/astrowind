---
import { Icon } from 'astro-icon/components';
import Image from '~/components/common/Image.astro';
import PostTags from '~/components/blog/Tags.astro';
import SocialShare from '~/components/common/SocialShare.astro';
import { getPermalink } from '~/utils/permalinks';
import { getFormattedDate } from '~/utils/utils';
import type { Post } from '~/types';

export interface Props {
  post: Post;
  url: string | URL;
}

const { post, url } = Astro.props;

// Function to inject ads into content
const injectAds = (content: string) => {
  if (!content) return content;
  
  const middleAd = `
    <div class="my-8 not-prose w-full flex justify-center">
      <div class="w-full max-w-3xl">
        <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1193332880003971" crossorigin="anonymous"></script>
        <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-1193332880003971" data-ad-slot="1480860443" data-ad-format="auto" data-full-width-responsive="true"></ins>
        <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
      </div>
    </div>
  `;

  // Strategy 1: Insert after first H2 heading
  const h2Match = content.match(/(<h2[^>]*>.*?<\/h2>)/i);
  if (h2Match) {
    return content.replace(h2Match[0], h2Match[0] + middleAd);
  }
  
  // Strategy 2: Insert after 2nd paragraph if no H2 found
  const paragraphs = content.split('</p>');
  if (paragraphs.length >= 3) {
    paragraphs[1] += '</p>' + middleAd;
    return paragraphs.join('</p>');
  }
  
  // Strategy 3: Insert in middle of content by word count
  const words = content.split(' ');
  if (words.length > 200) {
    const middleIndex = Math.floor(words.length / 2);
    const beforeMiddle = words.slice(0, middleIndex).join(' ');
    const afterMiddle = words.slice(middleIndex).join(' ');
    return beforeMiddle + middleAd + afterMiddle;
  }
  
  return content;
};
---

<section class="py-8 sm:py-16 lg:py-20 mx-auto">
  <!-- Ad Unit 1: Top of posts list view -->
  <div class="max-w-3xl mx-auto px-4 sm:px-6 mb-8">
    <script is:inline src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1193332880003971"
         crossorigin="anonymous"></script>
    <ins class="adsbygoogle"
         style="display:block"
         data-ad-client="ca-pub-1193332880003971"
         data-ad-slot="7060490188"
         data-ad-format="auto"
         data-full-width-responsive="true"></ins>
    <script is:inline>
         (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
  </div>

  <article>
    <header
      class={post.image
        ? 'intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade'
        : 'intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade'}
    >
      <div class="flex justify-between flex-col sm:flow-row max-w-3xl mx-auto mt-0 mb-2 px-4 sm:px-6 sm:items-center">
        <p>
          <Icon name="tabler:clock" class="w-4 h-4 inline-block -mt-0.5 dark:text-gray-400" />
          <time datetime={String(post.publishDate)} class="inline-block">{getFormattedDate(post.publishDate)}</time>
          {
            post.author && (
              <>
                {' '}
                · <Icon name="tabler:user" class="w-4 h-4 inline-block -mt-0.5 dark:text-gray-400" />
                <span class="inline-block">{post.author}</span>
              </>
            )
          }
          {
            post.category && (
              <>
                {' '}
                ·{' '}
                <a class="hover:underline inline-block" href={getPermalink(post.category.slug, 'category')}>
                  {post.category.title}
                </a>
              </>
            )
          }
          {
            post.readingTime && (
              <>
                &nbsp;· <span>{post.readingTime}</span> min read
              </>
            )
          }
        </p>
      </div>
      <h1
        class="px-4 sm:px-6 py-6 max-w-3xl mx-auto text-4xl md:text-5xl font-bold leading-tighter tracking-tighter font-heading"
      >
        {post.title}
      </h1>
      {
        post.image ? (
          <div class="w-[94%] mx-auto">
            <Image
              src={post.image}
              class="max-w-full lg:max-w-[900px] mx-auto mb-6 rounded-[5%] bg-gray-400 dark:bg-slate-700"
              widths={[400, 900]}
              sizes="(max-width: 900px) 400px, 900px"
              alt={post?.excerpt || ''}
              width={900}
              height={506}
              loading="eager"
              decoding="async"
            />
          </div>
        ) : (
          <div class="max-w-3xl mx-auto px-4 sm:px-6">
            <div class="border-t dark:border-slate-700" />
          </div>
        )
      }
    </header>

    <div
      class="mx-auto px-6 sm:px-6 max-w-3xl prose prose-md lg:prose-xl dark:prose-invert dark:prose-headings:text-slate-300 prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-primary dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg mt-8 prose-headings:scroll-mt-[80px] prose-li:my-0"
    >
      {post.content ? (
        <Fragment set:html={injectAds(post.content)} />
      ) : (
        <slot />
      )}
    </div>

    <div class="mx-auto px-6 sm:px-6 max-w-3xl mt-8 flex justify-between flex-col sm:flex-row">
      <PostTags tags={post.tags} class="mr-5 rtl:mr-0 rtl:ml-5" />
      <SocialShare url={url} text={post.title} class="mt-5 sm:mt-1 align-middle text-gray-500 dark:text-slate-600" />
    </div>

    <!-- Ad Unit 3: Bottom of article -->
    <div class="max-w-3xl mx-auto px-4 sm:px-6 mt-8">
      <script is:inline src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1193332880003971"
           crossorigin="anonymous"></script>
      <ins class="adsbygoogle"
           style="display:block"
           data-ad-client="ca-pub-1193332880003971"
           data-ad-slot="4258033182"
           data-ad-format="auto"
           data-full-width-responsive="true"></ins>
      <script is:inline>
           (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </div>
  </article>
</section>